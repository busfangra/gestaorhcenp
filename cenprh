<body>

<div class="container">
    <h1>Gestão de RH Integrada</h1>
    
    <div class="tabs">
        <button class="tab-btn active" onclick="openTab('cadastro')">Novo Cadastro</button>
        <button class="tab-btn" onclick="openTab('consulta')">Consultar Base</button>
    </div>

    <div id="loading">Processando... aguarde.</div>

    <div id="cadastro" class="tab-content active">
        <form id="formCadastro">
            <div class="form-group">
                <label>Tipo de Registro:</label>
                <select id="tipo" required>
                    <option value="Candidato">Candidato</option>
                    <option value="Empregado">Empregado</option>
                    <option value="Vaga">Vaga</option>
                </select>
            </div>

            <div class="form-group">
                <label>CPF (Apenas números - ID Único):</label>
                <input type="text" id="cpf" placeholder="00000000000" maxlength="11" required>
            </div>

            <div class="form-group">
                <label>Nome Completo / Título da Vaga:</label>
                <input type="text" id="nome" required>
            </div>

            <div class="form-group">
                <label>Cargo / Função:</label>
                <input type="text" id="cargo">
            </div>

            <div class="form-group">
                <label>CEP (Busca Automática):</label>
                <input type="text" id="cep" placeholder="00000-000" maxlength="9" onblur="buscarCep(this.value)">
            </div>

            <div class="form-group">
                <label>Endereço Completo:</label>
                <input type="text" id="endereco" readonly style="background-color: #eee;">
            </div>

            <button type="submit" class="btn">Salvar no Google Sheets</button>
        </form>
    </div>

    <div id="consulta" class="tab-content">
        <div class="form-group">
            <label>Digite o CPF para buscar:</label>
            <input type="text" id="cpfBusca" placeholder="Apenas números">
            <button onclick="buscarDados()" class="btn btn-search">Pesquisar</button>
        </div>

        <div id="resultadoBusca" class="card-result">
            <h3>Dados Encontrados:</h3>
            <p><strong>Nome:</strong> <span id="resNome"></span></p>
            <p><strong>Cargo:</strong> <span id="resCargo"></span></p>
            <p><strong>Tipo:</strong> <span id="resTipo"></span></p>
            <p><strong>Local:</strong> <span id="resEndereco"></span></p>
        </div>
    </div>
</div>

<script>
    // -------------------------------------------------------
    // CONFIGURAÇÃO: COLAR SUA URL DO APP SCRIPT AQUI ABAIXO
    // -------------------------------------------------------
    const SCRIPT_URL = "COLE_AQUI_SUA_URL_DO_GOOGLE_APPS_SCRIPT"; 

    // Função para alternar abas
    function openTab(tabName) {
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.getElementById(tabName).classList.add('active');
        event.currentTarget.classList.add('active');
    }

    // 1. API DE CEP (ViaCEP)
    function buscarCep(cep) {
        cep = cep.replace(/\D/g, '');
        if (cep != "") {
            document.getElementById('endereco').value = "Buscando...";
            fetch(`https://viacep.com.br/ws/${cep}/json/`)
                .then(response => response.json())
                .then(data => {
                    if (!data.erro) {
                        document.getElementById('endereco').value = `${data.logradouro}, ${data.bairro}, ${data.localidade} - ${data.uf}`;
                    } else {
                        alert("CEP não encontrado.");
                        document.getElementById('endereco').value = "";
                    }
                })
                .catch(() => alert("Erro ao buscar CEP."));
        }
    }

    // 2. SALVAR DADOS (POST para Google Sheets)
    document.getElementById('formCadastro').addEventListener('submit', function(e) {
        e.preventDefault();
        
        if(SCRIPT_URL.includes("COLE_AQUI")) {
            alert("Erro: Você não configurou a URL do Script no código HTML!");
            return;
        }

        const loading = document.getElementById('loading');
        loading.style.display = 'block';

        const dados = {
            cpf: document.getElementById('cpf').value,
            nome: document.getElementById('nome').value,
            cargo: document.getElementById('cargo').value,
            cep: document.getElementById('cep').value,
            endereco: document.getElementById('endereco').value,
            tipo: document.getElementById('tipo').value
        };

        // O Google Apps Script requer um "hack" de no-cors ou envio como stringify no body
        fetch(SCRIPT_URL + "?action=save", {
            method: "POST",
            body: JSON.stringify(dados)
        })
        .then(response => response.json())
        .then(data => {
            loading.style.display = 'none';
            if(data.status === "sucesso") {
                alert("Dados salvos com sucesso no Google Drive!");
                document.getElementById('formCadastro').reset();
            }
        })
        .catch(error => {
            loading.style.display = 'none';
            console.error('Erro:', error);
            alert("Ocorreu um erro. Verifique o console (F12) ou se a URL do script está correta.");
        });
    });

    // 3. BUSCAR DADOS (GET do Google Sheets)
    function buscarDados() {
        const cpf = document.getElementById('cpfBusca').value;
        const resultCard = document.getElementById('resultadoBusca');
        const loading = document.getElementById('loading');

        if(!cpf) return alert("Digite um CPF");
        
        loading.style.display = 'block';
        resultCard.style.display = 'none';

        fetch(`${SCRIPT_URL}?action=search&cpf=${cpf}`)
        .then(response => response.json())
        .then(data => {
            loading.style.display = 'none';
            if (data == "Não encontrado") {
                alert("Candidato/Empregado não encontrado.");
            } else {
                document.getElementById('resNome').innerText = data.nome;
                document.getElementById('resCargo').innerText = data.cargo;
                document.getElementById('resTipo').innerText = data.tipo;
                document.getElementById('resEndereco').innerText = data.endereco;
                resultCard.style.display = 'block';
            }
        })
        .catch(error => {
            loading.style.display = 'none';
            alert("Erro na busca. Verifique a conexão.");
        });
    }
</script>

</body>
</html>
